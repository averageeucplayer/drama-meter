{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Drama Meter",
  "version": "0.0.1",
  "identifier": "com.drama-meter",
  "build": {
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd web && npm run dev",
    "beforeBuildCommand": "cd web && npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
        {
        "label": "main",
        "title": "Drama Meter",
        "userAgent": "Drama Meter",
        "url": "live",
        "fullscreen": false,
        "width": 500,
        "height": 350,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "minWidth": 400,
        "minHeight": 120,
        "alwaysOnTop": true,
        "visible": false,
        "focus": false
      },
      {
        "label": "logs",
        "title": "Logs",
        "userAgent": "Logs",
        "url": "logs",
        "minWidth": 650,
        "minHeight": 300,
        "width": 800,
        "height": 500,
        "decorations": true,
        "visible": false
      },
      {
        "label": "mini",
        "title": "Mini",
        "userAgent": "Mini",
        "url": "mini",
        "fullscreen": false,
        "width": 1280,
        "height": 200,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "minWidth": 1280,
        "minHeight": 200,
        "alwaysOnTop": true,
        "visible": false,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": [
      "assets/data/*.json",
      "assets/migration/*.sql",
      "assets/templates/*.json"
    ],

    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
   "plugins": {
    "updater": {
       "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENGOEVGODI1MjFGRDk5QjIKUldTeW1mMGhKZmlPejdHNG1pc24yaTR2Zml5RXRIczlzSVM0cFMrbDV2R2NXM3hVSmV3R1BCNlAK",
      "endpoints": [
        "https://github.com/averageeucplayer/drama-meter/releases/latest/download/latest.json"
      ]
    }
  }
}